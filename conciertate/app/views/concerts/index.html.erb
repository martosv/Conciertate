<!DOCUMENT html>
    <header>
    	<h1 align="middle">Welcome to Conciertate!</h1>
    </header>

    <body>
        <aside>
        <div class='sidebar'>
            <div class='later_concerts'> <h3>Later this month </h3></div>
            <div>
                <ul>
                    <li>
                        <% @concerts.each do |concert|%>
                            <% if concert.date > Time.now %>
                            <%= concert.band %>
                            <% end %>
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
        </aside>

        <article class='indexarticle'>
    	<div>
            <h1 align= "middle">Listing concerts</h1> 
    	    <% @concerts.each do |concert|%>
        	   <div>
        	       <%= concert.band %>
        		   <%= link_to 'More info...', concert_path(concert)%>
        		   <%= link_to 'Edit', edit_concert_path(concert) %>
        		   <%= link_to 'Delete', concert_path(concert), method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
    	    <% end %>

            <p>
                <%= link_to 'New concert', new_concert_path %>
            </p>
        </div>
        </article>

    </body>