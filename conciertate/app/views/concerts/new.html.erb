<body>
  <section id="content">

    <%= form_for(@concert, html: {multipart: true}) do |f| %>
      
      <div class="error"><% if @concert.errors.any? %>
        <h2> Errors: </h2>
        
          <% @concert.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end%> 
      <% end %></div>
      
      <h2 class="p5 top-5">Information</h2>
      <div class="p">    
          <p>
              <%= f.label :band %><br>
              <%= f.text_field :band %>
          </p>    
          <p>
              <%= f.label :venue %><br>
              <%= f.text_area :venue %>
          </p>
          <p>
              <%= f.label :city %><br>
              <%= f.text_area :city %>
          </p>
          <p>
              <%= f.label :date %><br>
              <%= f.date_select :date %>
          </p>
          <p>
              <%= f.label :price %><br>
              <%= f.text_area :price %>$
          </p>
          <p>
              <%= f.label :photo %><br>
              <p> <%= f.text_area :photo %> Enter the URL </p>
          </p>
          <p>
              <%= f.label :description %><br>
              <%= f.text_area :description %>
          </p>
          <p>
              <%= f.label :tickets %><br>
              <%= f.text_area :tickets %>
          </p>
          <p>
              <div class="button top-3"><%= f.submit %></div>
          </p>
      </div>
    <% end %>
  </section>

